<theme>
	<formatVersion>4</formatVersion>
	<feature supported="carousel">

		<view name="system">

			<image name="background" extra="true">
				<path>./background.png</path>
				<origin>0 0</origin>
				<pos>0 0</pos>
				<size>1 1</size>
				<tile>true</tile>
			</image>

			<text name="mainMenu" extra="true">
				<origin>0.5 1</origin>
				<pos>0.5 0.12</pos>
				<color>FFFFFF</color>
				<forceUppercase>true</forceUppercase>
				<text>Main Menu</text>
				<fontPath>./Roboto-Black.ttf</fontPath>
				<fontSize>0.04</fontSize>
				<size>0.4 0.1</size>
				<alignment>center</alignment>
				<lineSpacing>1</lineSpacing>
			</text>

			<text name="logoText">
				<color>FFFFFF</color>
				<forceUppercase>true</forceUppercase>
				<text>${system.fullName}</text>
				<fontPath>./Roboto-Black.ttf</fontPath>
				<fontSize>0.036</fontSize>
			</text>

			<carousel name="systemcarousel">
				<type>vertical</type>
				<color>00000000</color>
				<logoSize>1 0.2</logoSize>
				<logoScale>1</logoScale>
				<maxLogoCount>9</maxLogoCount>
				<origin>0.5 0</origin>
				<pos>0.5 0.14</pos>
				<size>1 0.78</size>
			</carousel>

			<text name="systemInfo">
				<backgroundColor>00000000</backgroundColor>
				<origin>0 0</origin>
				<pos>1 1</pos>
				<color>00000000</color>
			</text>

		</view>
	
	</feature>

	<view name="system, basic, detailed, video, grid">

		<image name="line" extra="true">
			<path>./bg_color.png</path>
			<origin>0.5 0</origin>
			<pos>0.5 0.12</pos>
			<size>0.45 0.002</size>
			<color>FFFFFF</color>
		</image>

		<image name="shade" extra="true">
			<path>./bg_color.png</path>
			<origin>0.5 0.5</origin>
			<pos>0.5 0.5</pos>
			<size>1 1</size>
			<color>00000088</color>
		</image>

		<helpsystem name="help">
			<textColor>FFFFFF00</textColor>
			<iconColor>FFFFFF00</iconColor>
			<origin>0 0</origin>
			<pos>1 1</pos>
			<fontSize>0.017</fontSize>
		</helpsystem>

	</view>

	<view name="basic">

		<text name="logoText">
			<origin>0.5 0.5</origin>
			<pos>0.5 0.06</pos>
			<color>FFFFFF</color>
			<forceUppercase>true</forceUppercase>
			<text>${system.fullName}</text>
			<fontPath>./Roboto-Black.ttf</fontPath>
			<fontSize>0.04</fontSize>
			<size>0.1 0.4</size>
			<lineSpacing>1</lineSpacing>
			<alignment>center</alignment>
		</text>

		<textlist name="gamelist">
			<selectorColor>00000000</selectorColor>
			<selectedColor>FFFF00</selectedColor>
			<primaryColor>909090</primaryColor>
			<secondaryColor>FF8800</secondaryColor>
			<origin>0.5 0</origin>
			<pos>0.5 0.13</pos>
			<size>1 0.78</size>
			<fontPath>./Roboto-Black.ttf</fontPath>
			<fontSize>0.036</fontSize>
			<forceUppercase>true</forceUppercase>
		</textlist>

	</view>

	<view name="detailed, video">

		<text name="logoText">
			<origin>0.5 1</origin>
			<pos>0.5 0.12</pos>
			<color>FFFFFF</color>
			<forceUppercase>true</forceUppercase>
			<text>${system.fullName}</text>
			<fontPath>./Roboto-Black.ttf</fontPath>
			<fontSize>0.04</fontSize>
			<size>0.4 0.1</size>
			<lineSpacing>1</lineSpacing>
			<alignment>center</alignment>
		</text>

		<textlist name="gamelist">
			<selectorColor>00000000</selectorColor>
			<selectedColor>FFFF00</selectedColor>
			<primaryColor>FFFFFF</primaryColor>
			<secondaryColor>00FF00</secondaryColor>
			<origin>0.5 0</origin>
			<pos>0.5 0.13</pos>
			<size>1 0.78</size>
			<fontPath>./Roboto-Black.ttf</fontPath>
			<fontSize>0.036</fontSize>
			<forceUppercase>true</forceUppercase>
			<alignment>center</alignment>
		</textlist>

			<text name="md_lbl_rating, md_lbl_releasedate, md_lbl_developer, md_lbl_publisher, md_lbl_genre, md_lbl_players, md_lbl_lastplayed, md_lbl_playcount">
				<color>90909000</color>
				<forceUppercase>1</forceUppercase>
				<fontSize>0.02</fontSize>
				<size>0.13 0.01</size>
			</text>

			<text name="md_developer, md_publisher, md_genre, md_players, md_playcount">
				<color>90909000</color>
				<forceUppercase>1</forceUppercase>
				<fontSize>0.02</fontSize>
				<size>0.13 0.01</size>
			</text>
			<datetime name="md_releasedate, md_lastplayed">
				<color>90909000</color>
				<forceUppercase>1</forceUppercase>
				<fontSize>0.02</fontSize>
				<size>0.13 0.01</size>
			</datetime>

				<text name="md_lbl_rating">
					<pos>0.47 0.73</pos>
				</text>
				<rating name="md_rating">
					<color>00000000</color>
					<pos>1 1</pos>
					<size>0.1 0.02</size>
				</rating>

				<text name="md_lbl_players">
					<pos>0.47 0.76</pos>
				</text>
				<text name="md_players">
					<pos>0.55 0.76</pos>
				</text>

				<text name="md_lbl_genre">
					<pos>0.47 0.79</pos>
				</text>
				<text name="md_genre">
					<pos>0.55 0.79</pos>
				</text>

				<text name="md_lbl_developer">
					<pos>0.47 0.82</pos>
				</text>
				<text name="md_developer">
					<pos>0.55 0.82</pos>
				</text>

				<text name="md_lbl_publisher">
					<pos>0.47 0.85</pos>
				</text>
				<text name="md_publisher">
					<pos>0.55 0.85</pos>
				</text>

				<text name="md_lbl_releasedate">
					<pos>0.47 0.88</pos>
				</text>
				<datetime name="md_releasedate">
					<pos>0.55 0.88</pos>
				</datetime>

				<text name="md_lbl_playcount">
					<pos>0.47 0.91</pos>
				</text>
				<text name="md_playcount">
					<pos>0.55 0.91</pos>
				</text>

				<text name="md_lbl_lastplayed">
					<pos>0.47 0.94</pos>
				</text>
				<datetime name="md_lastplayed">
					<pos>0.55 0.94</pos>
				</datetime>
		
			<text name="md_description">
				<pos>0.71 0.73</pos>
				<size>0.27 0.225</size>
				<color>90909000</color>
				<fontSize>0.02</fontSize>
				<alignment>left</alignment>
				<forceUppercase>1</forceUppercase>
				<lineSpacing>1.5</lineSpacing>
			</text>

	</view>

	<view name="detailed">

		<image name="md_image">
			<origin>0.5 0.5</origin>
			<pos>0.5 0.5</pos>
			<maxSize>1 1</maxSize>
		</image>

	</view>

	<feature supported="video">
	<view name="video">

		<image name="md_marquee">
			<color>00000000</color>
			<pos>1 1</pos>
			<origin>0 0</origin>
			<maxSize>0 0</maxSize>
		</image>

 		<video name="md_video">
			<origin>0.5 0.5</origin>
			<pos>0.5 0.5</pos>
			<maxSize>1 1</maxSize>
			<delay>3</delay>
			<default>true</default>
			<showSnapshotNoVideo>true</showSnapshotNoVideo>
			<showSnapshotDelay>true</showSnapshotDelay>
		</video>
	</view>
	</feature>

	<feature supported="z-index">
		<view name="system, basic, detailed, video">

			<carousel name="systemcarousel">
				<zIndex>50</zIndex>
			</carousel>

			<textlist name="gamelist">
				<zIndex>50</zIndex>
			</textlist>

			<text name="logoText">
				<zIndex>50</zIndex>
			</text>

			<text name="mainMenu" extra="true">
				<zIndex>50</zIndex>
			</text>

			<image name="shade" extra="true">
				<zIndex>49</zIndex>
			</image>

			<image name="line" extra="true">
				<zIndex>50</zIndex>
			</image>

			<image name="background_bottom" extra="true">
				<zIndex>50</zIndex>
			</image>

			<image name="md_image">
				<zIndex>1</zIndex>
			</image>

			<image name="background" extra="true">
				<zIndex>0</zIndex>
			</image>

		</view>
	</feature>

</theme>
